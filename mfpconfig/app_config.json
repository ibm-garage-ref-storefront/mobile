{
    "platforms": [
        {
            "applicationKey": {
                "version": "1.0.0",
                "clientPlatform": "android",
                "packageName": "com.ibm.storefront"
            },
            "displayName": "StoreFront",
            "scopeElementMapping": {
                "push.mobileclient": "BlueAuthLogin"
            }
        },
        {
            "applicationKey": {
                "version": "1.0.0",
                "clientPlatform": "ios",
                "bundleId": "com.ibm.storefront"
            },
            "displayName": "StoreFront",
            "scopeElementMapping": {
                "push.mobileclient": "BlueAuthLogin"
            }
        }
    ],
    "services": [
        {
            "name": "push",
            "settings": {
                "gcm": {
                    "apiKey": "<insert apikey here>",
                    "senderId": "<insert senderid here>"
                },
                "apns": {
                    "certificate": "<location of .p12>",
                    "isSandBox": true,
                    "password": "<password>"
                }
            }
        }
    ],
    "adapters": [
        {
            "adapter": "BlueAuthLogin",
            "connectivity": {
                "http": {
                    "connectionTimeoutInMilliseconds": 30000,
                    "cookiePolicy": "BEST_MATCH",
                    "dtdvalidationEnabled": false,
                    "maxConcurrentConnectionsPerNode": 49,
                    "maxRedirects": 11,
                    "port": 444,
                    "protocol": "http",
                    "socketTimeoutInMilliseconds": 30002
                }
            },
            "properties": {
                "securityCheckDefinitions": {
                    "BlueAuthLogin": {
                        "properties": {
                            "TokenEndpointURL": {
                                "value": "<---ENTER TOKEN ENDPOINT URL--->"
                            },
                            "ClientSecret": {
                                "value": "<---ENTER CLIENT SECRET--->"
                            },
                            "ClientID": {
                                "value": "<---ENTER CLIENT ID--->"
                            }
                        }
                    }
                }
            }
        }
    ],
    "backendServices": [
        {
            "service": "resorts",
            "baseUrl": "http://mybluemix.net/resorts",
            "auth": {
                "type": "basic",
                "credential": {
                    "username": "user",
                    "password": "pass"
                }
            },
            "ConnectionProperties": {
                "maxConnetions": "50",
                "connectionTimeoutInMilliseconds": "20000",
                "socketTimeoutInMilliseconds": "20000"
            }
        }
    ],
    "confidentialClients": [
        {
            "id": "storefront",
            "secret": "storefront",
            "allowedScope": "messages.write push.application.*",
            "displayName": "StoreFront Microservices"
        }
    ]
}